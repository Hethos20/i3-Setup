#dmenu
alt + F2
#	dmenu_run
	dmenu_run -nf '#BBBBBB' -nb '#222222' -sb '#09A5CE' -sf '#EEEEEE' -fn 'monospace-10' -p 'dmenu prompt'

#ranger
alt + F1
	urxvt -e ranger

#lock screen
ctrl + alt + p
	lock

#terminal
alt + t
	urxvt	

#kill window
alt + F4
	i3-msg kill window

#go to next workspace
ctrl + alt + Right
	i3-msg workspace next

#go to previous workspace
ctrl + alt + Left
	i3-msg workspace prev

#Mute audio
XF86AudioMute
	amixer -q -D pulse sset Master toggle && pkill -RTMIN+10 i3blocks

XF86AudioRaiseVolume 
	amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+10 i3blocks

XF86AudioLowerVolume 
	amixer -q -D pulse sset Master 5%- && pkill -RTMIN+10 i3blocks

